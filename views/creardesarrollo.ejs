<!doctype html>
<html lang="en">

<head>
  <%- include("template/head.ejs")%>
  <link rel="stylesheet" type="text/css" href="../css/crearproyectos.css" />
  
</head>

<body>
  <%- include("template/header.ejs")%>
  <main class="container-fluid p-0 mb-0">

    <%- include("template/navleft.ejs")%>

    <div class="float-start ms-0 row justify-content-center col-8 col-lg-8 col-md-9 col-sm-9 text-center">

      <div class="h-100 m-3 col-11 float-none col-center border border-dark border-2 overflow-hidden"
        style=" background-color:#eee8cd;max-height: 1200px;">
        <div class=" row border border-dark border-end-0 border-top-0 border-start-0">
          <div class="col-center pt-4 pb-md-3 pb-sm-3 pb-3 pb-lg-3">
            <span class="fs-5 fw-bold">Crear Tema Desarrollo</span>
          </div>

        </div>
        <form action="/desarrollo/creardesarrollo" class= "needs-validation formulario" method="POST">
          <!--Se incluye el nombre del tema de lo que se va a preguntar-->
        <div class="col-12 mt-3" style="max-height: 1100px;">
          <div>
          <input id="textoPreguntas" name="tema" type="text" class="col-12 col-sm-12 col-md-8 col-lg-9 btn btn-info my-2"
            placeholder="Nombre del Tema"></input>

          </div>
          <div>
            <!--Se incluye la pregunta que hay que desarrollar-->
           <input id="textoPreguntas" name="pregunta" type="text"
                class="col-12 col-sm-12 col-md-12 col-lg-12 btn btn-success my-2"
                placeholder="Escribir Pregunta"></input>
              </div>
              <div>
                <!--Se elige la duración del tema a desarrollar-->
                <ul class="mb-3 list-unstyled">
                  <span>Duración de la Prueba</span>
                  <li class="col-center col-12 col-sm-12 col-md-4 col-lg-3"><input id="unica" name="duracion"
                      type="radio" value=1 checked="checked"> 1 minuto</input></li>
                  <li><input id="tf" name="duracion" type="radio" value=15> 15 minutos</input></li>
                  <li><input id="varias" name="duracion" type="radio" value=30> 30 minutos</input></li>
                </ul>
          </div>

        </div>
        
          <a class="col-12 col-sm-12 col-md-12 col-lg-4 btn btn-success my-2" href="/desarrollo" id="volveriniciarsesion">Ir a Preguntas Desarrollo</a>
          <button class="col-12 col-sm-12 col-md-12 col-lg-3 btn btn-success my-2 px-1 my-2" type="submit">Guardar</button>
        
      </form>
      </div>
      

    </div>




    <%- include("template/navright.ejs")%>




  </main>
  <%- include("template/footer.ejs")%>
</body>

</html>